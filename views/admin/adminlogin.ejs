<!DOCTYPE html>
<html>
<head>
	<title>Login</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js">
	</script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<link rel="stylesheet" href="./css/main.css">
	<style>
	.loader-wrapper {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-color: #242f3f;
  display:flex;
  justify-content: center;
  align-items: center;
}
.loader {
  display: inline-block;
  width: 30px;
  height: 30px;
  position: relative;
  border: 4px solid #Fff;
  animation: loader 2s infinite ease;
}
.loader-inner {
  vertical-align: top;
  display: inline-block;
  width: 100%;
  background-color: #fff;
  animation: loader-inner 2s infinite ease-in;
}

@keyframes loader {
  0% { transform: rotate(0deg);}
  25% { transform: rotate(180deg);}
  50% { transform: rotate(180deg);}
  75% { transform: rotate(360deg);}
  100% { transform: rotate(360deg);}
}

@keyframes loader-inner {
  0% { height: 0%;}
  25% { height: 0%;}
  50% { height: 100%;}
  75% { height: 100%;}
  100% { height: 0%;}
}
	</style>

	<script type="text/javascript">
		$(document).ready(function(){

			$( "#form3" ).submit(function(event) {
				event.preventDefault();

				$.ajax({
					type: 'POST',
					url: '/adminlogin',
					data: $('#form3').serialize(),
					dataType: "json",
					success: function(response){
						//alert("a");
						//console.log(response.Success);
						$('#form3')[0].reset();

						document.getElementById("check1").innerHTML=response.Success;
         					//ADD THIS CODE
         					setTimeout(function(){
         						document.getElementById("check1").innerHTML="";
         					},3000);
         					if (response.Success=="Success!") {
         						document.getElementById("aa1").click();
         					};
         				},
         				error: function() {
         				}
         			})
			});

		});
	
		$(window).on("load",function(){
          $(".loader-wrapper").fadeOut("slow");
		  
        })
	</script>
</head>
<body>
	<div class="col-md-4 col-md-offset-4">
		<div>
			<p>Admin-Login</p>
		</div>
		<div class="form-group">
			<form id="form" method="post" >
				<input type="text" name="username" placeholder="E-mail" required="" class="form-control"><br/>
				<input type="password" name="password" placeholder="Password" required="" class="form-control"><br/>
				<input type="submit" value="Login"  onclick="window.parent.location.reload();" class="btn btn-success">
			</form>
		</div>
		<div class="mssg bg-danger">
			<span id="check1" ></span>
		</div>
		<div id="LangTable"><a href="/adminprofile" id="aa1"></a>
		</div>
		<div><span>Do you forgot password?</span><a href="/adminforgetpass">Click here</a>
		<div><span>Create a new Account?</span><a href="/admin">Register here</a>

		</div>
		
	</div>
	<div class="loader-wrapper">
		<span class="loader"><span class="loader-inner"></span></span>
	</div>
</body>
</html>